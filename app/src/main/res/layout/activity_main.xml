<?xml version="1.0" encoding="utf-8"?>
    <androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false">

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/btn_profil"
                android:backgroundTint="#FFFFFF"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/person"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="300dp"
                android:scaleType="centerCrop"
                android:baseline="100dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안녕하세요.\n당신의 언어 세대 유형은 무엇인가요 ? "
                android:textSize="18sp"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/notosansbold"
                android:textColor="#000000"
                android:layout_marginLeft="15dp"
                android:background="#FFFFFF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지금 알아보러 가요"
                android:textColor="#404040"
                android:textSize="15sp"
                android:layout_marginTop="98dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/notosansregular"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/buttonimg"
                android:layout_marginTop="135dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#ffffff" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 테스트 하러 가기 "
                android:background="#FFC100"
                android:fontFamily="@font/notosansregular"
                android:textSize="15sp"
                android:layout_marginTop="280dp"
                android:layout_gravity="center_horizontal"/>

            <ImageButton
                android:id="@+id/rink1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rink1"
                android:layout_marginTop="380dp"
                android:background="#fff"
                android:layout_marginLeft="20dp"/>
            <ImageButton
                android:id="@+id/rink2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rink2"
                android:layout_marginTop="380dp"
                android:background="#fff"
                android:layout_marginLeft="200dp"/>
            <ImageButton
                android:id="@+id/rink3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rink3"
                android:layout_marginTop="550dp"
                android:background="#fff"
                android:layout_marginLeft="20dp"/>
            <ImageButton
                android:id="@+id/rink4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rink4"
                android:layout_marginTop="550dp"
                android:background="#fff"
                android:layout_marginLeft="200dp"/>

        </FrameLayout>

<com.google.android.material.navigation.NavigationView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/drawer_nav_view"
    android:layout_gravity="start"
    app:headerLayout="@layout/nav_header"
    app:menu="@menu/nav_menu"/>
    </androidx.drawerlayout.widget.DrawerLayout>